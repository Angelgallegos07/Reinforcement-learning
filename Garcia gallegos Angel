            </select>
            <br><br>

            <button type="button" onclick="calcularPorcentaje()">Calcular</button>
        </form>

        <!-- Elemento para mostrar el resultado -->
        <div id="resultado"></div>
    </div>

    <img src="calculadora.jpg" alt="Imagen relacionada" class="calculadora">

    <script>
        function calcularPorcentaje() {
            const numero = parseFloat(document.getElementById("numero").value);
            const porcentaje = parseFloat(document.getElementById("porcentaje").value);
            const resultadoDiv = document.getElementById("resultado");

            if (isNaN(numero) || isNaN(porcentaje)) {
                alert("Por favor, ingresa un número válido y selecciona un porcentaje.");
                return;
            }

            const resultado = (numero * porcentaje) / 100;
            resultadoDiv.textContent = "El " + porcentaje + "% de " + numero + " es: " + resultado.toFixed(2);
        }
    </script>

